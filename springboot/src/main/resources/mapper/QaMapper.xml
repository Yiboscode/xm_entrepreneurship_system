<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.QaMapper">

    <select id="selectAll" resultType="com.example.entity.Qa">
        select qa.*, teacher.name as teacherName, teacher.avatar as teacherAvatar, user.name as userName, user.avatar as userAvatar from qa
        left join teacher on qa.teacher_id = teacher.id
        left join user on qa.user_id = user.id
        <where>
            <if test="id != null"> and qa.id = #{id}</if>
            <if test="teacherId != null"> and (qa.teacher_id = #{teacherId} or qa.teacher_id is null)</if>
            <if test="teacherName != null"> and teacher.name like concat('%', #{teacherName}, '%')</if>
            <if test="userId != null"> and qa.user_id = #{userId}</if>
            <if test="userName != null"> and user.name like concat('%', #{userName}, '%')</if>
            <if test="question != null"> and qa.question like concat('%', #{question}, '%')</if>
            <if test="answer != null"> and qa.answer like concat('%', #{answer}, '%')</if>
            <if test="time != null"> and qa.time like concat('%', #{time}, '%')</if>
            <if test="img != null"> and qa.img like concat('%', #{img}, '%')</if>
        </where>
        order by id desc
    </select>

    <select id="selectById" resultType="com.example.entity.Qa">
        select * from `qa`
        where id = #{id}
    </select>

    <delete id="deleteById">
        delete from `qa`
        where id = #{id}
    </delete>

    <insert id="insert" parameterType="com.example.entity.Qa" useGeneratedKeys="true" keyProperty="id">
        insert into `qa`
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="teacherId != null">teacher_id,</if>
            <if test="userId != null">user_id,</if>
            <if test="question != null">question,</if>
            <if test="answer != null">answer,</if>
            <if test="time != null">time,</if>
            <if test="img != null">img,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="teacherId != null">#{teacherId},</if>
            <if test="userId != null">#{userId},</if>
            <if test="question != null">#{question},</if>
            <if test="answer != null">#{answer},</if>
            <if test="time != null">#{time},</if>
            <if test="img != null">#{img},</if>
        </trim>
    </insert>

    <update id="updateById" parameterType="com.example.entity.Qa">
        update `qa`
        <set>
            <if test="teacherId != null">
                teacher_id = #{teacherId},
            </if>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="question != null">
                question = #{question},
            </if>
            <if test="answer != null">
                answer = #{answer},
            </if>
            <if test="time != null">
                time = #{time},
            </if>
            <if test="img != null">
                img = #{img},
            </if>
        </set>
        where id = #{id} 
    </update>

</mapper>