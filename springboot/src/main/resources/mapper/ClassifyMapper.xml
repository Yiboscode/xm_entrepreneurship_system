<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.ClassifyMapper">

    <select id="selectAll" resultType="com.example.entity.Classify">
        select classify.* from classify
        <where>
            <if test="id != null"> and classify.id = #{id}</if>
            <if test="name != null"> and classify.name like concat('%', #{name}, '%')</if>
        </where>
        order by id desc
    </select>

    <select id="selectById" resultType="com.example.entity.Classify">
        select * from `classify`
        where id = #{id}
    </select>

    <delete id="deleteById">
        delete from `classify`
        where id = #{id}
    </delete>

    <insert id="insert" parameterType="com.example.entity.Classify" useGeneratedKeys="true" keyProperty="id">
        insert into `classify`
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="name != null">name,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="name != null">#{name},</if>
        </trim>
    </insert>

    <update id="updateById" parameterType="com.example.entity.Classify">
        update `classify`
        <set>
            <if test="name != null">
                name = #{name},
            </if>
        </set>
        where id = #{id} 
    </update>

</mapper>