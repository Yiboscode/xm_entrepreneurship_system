<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.CertifyMapper">

    <select id="selectAll" resultType="com.example.entity.Certify">
        select certify.*, teacher.name as teacherName from certify
        left join teacher on certify.teacher_id = teacher.id
        <where>
            <if test="id != null"> and certify.id = #{id}</if>
            <if test="teacherId != null"> and certify.teacher_id = #{teacherId}</if>
            <if test="teacherName != null"> and teacher.name like concat('%', #{teacherName}, '%')</if>
            <if test="name != null"> and certify.name like concat('%', #{name}, '%')</if>
            <if test="gender != null"> and certify.gender like concat('%', #{gender}, '%')</if>
            <if test="cardNo != null"> and certify.card_no like concat('%', #{cardNo}, '%')</if>
            <if test="img1 != null"> and certify.img1 like concat('%', #{img1}, '%')</if>
            <if test="img2 != null"> and certify.img2 like concat('%', #{img2}, '%')</if>
            <if test="time != null"> and certify.time like concat('%', #{time}, '%')</if>
            <if test="status != null"> and certify.status like concat('%', #{status}, '%')</if>
            <if test="reason != null"> and certify.reason like concat('%', #{reason}, '%')</if>
        </where>
        order by id desc
    </select>

    <select id="selectById" resultType="com.example.entity.Certify">
        select * from `certify`
        where id = #{id}
    </select>

    <delete id="deleteById">
        delete from `certify`
        where id = #{id}
    </delete>

    <insert id="insert" parameterType="com.example.entity.Certify" useGeneratedKeys="true" keyProperty="id">
        insert into `certify`
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="teacherId != null">teacher_id,</if>
            <if test="name != null">name,</if>
            <if test="gender != null">gender,</if>
            <if test="cardNo != null">card_no,</if>
            <if test="img1 != null">img1,</if>
            <if test="img2 != null">img2,</if>
            <if test="time != null">time,</if>
            <if test="status != null">status,</if>
            <if test="reason != null">reason,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="teacherId != null">#{teacherId},</if>
            <if test="name != null">#{name},</if>
            <if test="gender != null">#{gender},</if>
            <if test="cardNo != null">#{cardNo},</if>
            <if test="img1 != null">#{img1},</if>
            <if test="img2 != null">#{img2},</if>
            <if test="time != null">#{time},</if>
            <if test="status != null">#{status},</if>
            <if test="reason != null">#{reason},</if>
        </trim>
    </insert>

    <update id="updateById" parameterType="com.example.entity.Certify">
        update `certify`
        <set>
            <if test="teacherId != null">
                teacher_id = #{teacherId},
            </if>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="gender != null">
                gender = #{gender},
            </if>
            <if test="cardNo != null">
                card_no = #{cardNo},
            </if>
            <if test="img1 != null">
                img1 = #{img1},
            </if>
            <if test="img2 != null">
                img2 = #{img2},
            </if>
            <if test="time != null">
                time = #{time},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="reason != null">
                reason = #{reason},
            </if>
        </set>
        where id = #{id} 
    </update>

</mapper>