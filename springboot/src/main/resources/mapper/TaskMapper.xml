<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.TaskMapper">

    <select id="selectAll" resultType="com.example.entity.Task">
        select task.*, teacher.name as teacherName, project.title as projectTitle from task
        left join teacher on task.teacher_id = teacher.id
        left join project on task.project_id = project.id
        <where>
            <if test="id != null"> and task.id = #{id}</if>
            <if test="teacherId != null"> and task.teacher_id = #{teacherId}</if>
            <if test="teacherName != null"> and teacher.name like concat('%', #{teacherName}, '%')</if>
            <if test="projectId != null"> and task.project_id = #{projectId}</if>
            <if test="projectTitle != null"> and project.title like concat('%', #{projectTitle}, '%')</if>
            <if test="title != null"> and task.title like concat('%', #{title}, '%')</if>
            <if test="detail != null"> and task.detail like concat('%', #{detail}, '%')</if>
            <if test="time != null"> and task.time like concat('%', #{time}, '%')</if>
        </where>
        order by id desc
    </select>

    <select id="selectById" resultType="com.example.entity.Task">
        select * from `task`
        where id = #{id}
    </select>

    <delete id="deleteById">
        delete from `task`
        where id = #{id}
    </delete>

    <insert id="insert" parameterType="com.example.entity.Task" useGeneratedKeys="true" keyProperty="id">
        insert into `task`
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="teacherId != null">teacher_id,</if>
            <if test="projectId != null">project_id,</if>
            <if test="title != null">title,</if>
            <if test="detail != null">detail,</if>
            <if test="time != null">time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="teacherId != null">#{teacherId},</if>
            <if test="projectId != null">#{projectId},</if>
            <if test="title != null">#{title},</if>
            <if test="detail != null">#{detail},</if>
            <if test="time != null">#{time},</if>
        </trim>
    </insert>

    <update id="updateById" parameterType="com.example.entity.Task">
        update `task`
        <set>
            <if test="teacherId != null">
                teacher_id = #{teacherId},
            </if>
            <if test="projectId != null">
                project_id = #{projectId},
            </if>
            <if test="title != null">
                title = #{title},
            </if>
            <if test="detail != null">
                detail = #{detail},
            </if>
            <if test="time != null">
                time = #{time},
            </if>
        </set>
        where id = #{id} 
    </update>

</mapper>