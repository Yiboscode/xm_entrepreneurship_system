<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.SubmitMapper">

    <select id="selectAll" resultType="com.example.entity.Submit">
        select submit.*, user.name as userName, task.title as taskTitle, teacher.name as teacherName from submit
        left join user on submit.user_id = user.id
        left join task on submit.task_id = task.id
        left join teacher on submit.teacher_id = teacher.id
        <where>
            <if test="id != null"> and submit.id = #{id}</if>
            <if test="userId != null"> and submit.user_id = #{userId}</if>
            <if test="userName != null"> and user.name like concat('%', #{userName}, '%')</if>
            <if test="taskId != null"> and submit.task_id = #{taskId}</if>
            <if test="taskTitle != null"> and task.title like concat('%', #{taskTitle}, '%')</if>
            <if test="teacherId != null"> and submit.teacher_id = #{teacherId}</if>
            <if test="teacherName != null"> and teacher.name like concat('%', #{teacherName}, '%')</if>
            <if test="title != null"> and submit.title like concat('%', #{title}, '%')</if>
            <if test="detail != null"> and submit.detail like concat('%', #{detail}, '%')</if>
            <if test="time != null"> and submit.time like concat('%', #{time}, '%')</if>
            <if test="status != null"> and submit.status like concat('%', #{status}, '%')</if>
            <if test="reason != null"> and submit.reason like concat('%', #{reason}, '%')</if>
        </where>
        order by id desc
    </select>

    <select id="selectById" resultType="com.example.entity.Submit">
        select * from `submit`
        where id = #{id}
    </select>

    <delete id="deleteById">
        delete from `submit`
        where id = #{id}
    </delete>

    <insert id="insert" parameterType="com.example.entity.Submit" useGeneratedKeys="true" keyProperty="id">
        insert into `submit`
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="userId != null">user_id,</if>
            <if test="taskId != null">task_id,</if>
            <if test="teacherId != null">teacher_id,</if>
            <if test="title != null">title,</if>
            <if test="detail != null">detail,</if>
            <if test="time != null">time,</if>
            <if test="status != null">status,</if>
            <if test="reason != null">reason,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="userId != null">#{userId},</if>
            <if test="taskId != null">#{taskId},</if>
            <if test="teacherId != null">#{teacherId},</if>
            <if test="title != null">#{title},</if>
            <if test="detail != null">#{detail},</if>
            <if test="time != null">#{time},</if>
            <if test="status != null">#{status},</if>
            <if test="reason != null">#{reason},</if>
        </trim>
    </insert>

    <update id="updateById" parameterType="com.example.entity.Submit">
        update `submit`
        <set>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="taskId != null">
                task_id = #{taskId},
            </if>
            <if test="teacherId != null">
                teacher_id = #{teacherId},
            </if>
            <if test="title != null">
                title = #{title},
            </if>
            <if test="detail != null">
                detail = #{detail},
            </if>
            <if test="time != null">
                time = #{time},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="reason != null">
                reason = #{reason},
            </if>
        </set>
        where id = #{id} 
    </update>

</mapper>